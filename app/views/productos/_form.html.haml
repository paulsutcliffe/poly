= form_for @producto, html: {multipart: true} do |f|
  - if @producto.errors.any?
    #error_explanation
      %h2= "#{pluralize(@producto.errors.count, "error")} en producto"
      %ul
        - @producto.errors.full_messages.each do |msg|
          %li= msg
  .row
    .span3
      .field
        = f.label :nombre
        = f.text_field :nombre
      .field
        = f.label :imagen
        = f.file_field :imagen
      .actions
        = f.submit 'Guardar', class: 'btn btn-default'
