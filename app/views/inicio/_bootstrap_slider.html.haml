#main-carrusel.carousel-projects.slide
  -#
    %ol.carousel-indicators
      - @diapositivas.each_with_index do |diapositiva, index|
        - if index == 0
          %li{:"data-target" => "#main-carrusel", :"data-slide-to" => index.to_s, :class => 'active'}
            = index.to_s
        - else
          %li{:"data-target" => "#main-carrusel", :"data-slide-to" => index.to_s}
            = index.to_s

  <!-- Carousel items -->
  .carousel-inner
    .item.active
      = image_tag('/assets/1170x320.png')
      .carousel-caption.span4
        %h3.well.well-small
          Botones
        %p.well.well-small
          Bla bla blafsf sdfsf sfsafsf sfsadf asfsafs
        = link_to 'Ver MÃ¡s', '', class: 'btn btn-default'
    .item
      = image_tag('/assets/1170x320.png')
      .carousel-caption

  <!-- Carousel nav -->
  .control-wrapper
    = link_to raw('&lsaquo;'), '#main-carrusel', :"data-slide" => 'prev', :class => 'carousel-control left'
    = link_to raw('&rsaquo;'), '#main-carrusel', :"data-slide" => 'next', :class => 'carousel-control right'



