#projects-carrusel.carousel-projects.slide
  %ol.carousel-indicators
    - @diapositivas.each_with_index do |diapositiva, index|
      - if index == 0
        %li{:"data-target" => "#projects-carrusel", :"data-slide-to" => index.to_s, :class => 'active'}
          = index.to_s
      - else
        %li{:"data-target" => "#projects-carrusel", :"data-slide-to" => index.to_s}
          = index.to_s

  <!-- Carousel items -->
  .carousel-inner
    .item.active
      = image_tag('holder.js/1170x320/industrial')
    .item
      = image_tag('holder.js/1170x320/social')




