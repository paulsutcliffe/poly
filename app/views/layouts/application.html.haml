!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Poly"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"
    = favicon_link_tag '/ico/poly-icon-144.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'
    = favicon_link_tag '/ico/poly-icon-114.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
    = favicon_link_tag '/ico/poly-icon-72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
    = favicon_link_tag '/ico/poly-icon-57.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
    = favicon_link_tag '/ico/favicon.png', :rel => 'shortcut icon'
    = javascript_include_tag "application"


  %body{id: bodyid, class: bodyclass}
    %header#main-header
      .container
        = render 'layouts/pre_header'
        .row
          .span2
            = link_to image_tag('logo.png'), '/', class: 'brand'
          .span10
            %nav.navbar
              .navbar-inner
                .container
                  %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
                    %span.icon-bar
                    %span.icon-bar
                    %span.icon-bar
                  .nav-collapse.collapse
                    = render 'shared/social_links'
                    = render 'layouts/menu'

    %section#main-content.container
      = bootstrap_flash
      = yield


      %footer#main-footer
        .well
          %p &copy; Company 2013
