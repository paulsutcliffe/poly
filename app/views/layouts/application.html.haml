  %body{id: bodyid, class: bodyclass}
    %header#main-header
      .container
        = render 'layouts/pre_header'
        .row
          .span2
            %h1
              = link_to image_tag('logo.png', alt: 'Poly Manufacturas'), '/', class: 'brand'
          .span10
            %nav.navbar
              .navbar-inner
                .container
                  %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
                    %span.icon-bar
                    %span.icon-bar
                    %span.icon-bar
                  .nav-collapse.collapse
                    = render 'shared/social_links'
                    = render 'layouts/menu'

    %section#main-content.container
      = yield


      %footer#main-footer
        .well
          %p &copy; Copyright | Manufacturas Poly S.A.C. Todos los derechos reservados
          =link_to 'http://www.mpsac.com.pe/webmail' do
            =image_tag image_path('sobre.png')

