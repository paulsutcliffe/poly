- if current_admin
  .admin-links-top
    = link_to 'Nuevo  Subcategoria', new_subcategoria_path, class: 'btn btn-default'

= page_title('subcategorias')
%p Texto descriptivo
= page_encabezado_end

.row
  .span12
    - @subcategorias.each do |subcategoria|
      .media-title
        %h2
          Nombre
      .media-body
        = subcategoria.nombre
      .media-title
        %h2
          Descripcion
      .media-body
        = subcategoria.descripcion
      .media-title
        %h2
          Imagen
      .media-body
        = subcategoria.imagen
      .media-title
        %h2
          Icono
      .media-body
        = subcategoria.icono
      .actions
        = link_to 'Ver', subcategoria, class: 'btn btn-default'
        - if current_admin
          = link_to 'Editar', edit_subcategoria_path(subcategoria), class: 'btn btn-default'
          = link_to 'Eliminar', subcategoria, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-default'
