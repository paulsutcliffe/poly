- if current_admin
  .admin-links-top
    = link_to 'Nuevo  Tipo', new_tipo_path, class: 'btn btn-default'

= page_title('tipos')
= page_encabezado('subtitulo', 'imagen')
%p Texto descriptivo
= page_encabezado_end

- @tipos.each_slice(4) do |tipo|
  .row
    - tipo.each do |tipo|
      .span3
        .img-wrapper
          = image_tag(tipo.imagen_url(:span3_rect))
          = link_to 'Ver más', tipo, class: 'btn btn-view-more'
        %h3.title-block.colored.well
          = link_to tipo.nombre, tipo
        .well
          = paragraph(tipo.descripcion)
       
          - if current_admin
            .actions
              = link_to 'Editar', edit_tipo_path(tipo), class: 'btn btn-default'
              = link_to 'Eliminar', tipo, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-default'
