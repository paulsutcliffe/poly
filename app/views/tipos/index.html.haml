- if current_admin
  .admin-links-top
    = link_to 'Nuevo  Tipo', new_tipo_path, class: 'btn btn-default'

= page_title('tipos')
%p Texto descriptivo
= page_encabezado_end

.row
  .span12
    - @tipos.each do |tipo|
      .media-title
        %h2
          Nombre
      .media-body
        = tipo.nombre
      .media-title
        %h2
          Descripcion
      .media-body
        = tipo.descripcion
      .media-title
        %h2
          Imagen
      .media-body
        = tipo.imagen
      .actions
        = link_to 'Ver', tipo, class: 'btn btn-default'
        - if current_admin
          = link_to 'Editar', edit_tipo_path(tipo), class: 'btn btn-default'
          = link_to 'Eliminar', tipo, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-default'
